<%= javascript_tag do%>
google.charts.load('current', {'packages':['corechart']});
      google.charts.setOnLoadCallback(drawChartAll);
      google.charts.setOnLoadCallback(drawChartSchool);
      google.charts.setOnLoadCallback(drawChartDept);
      //y축 tick 반올림 필요
      var arr = [['학점', '인원']];
      
      var arr_all = arr.concat(<%= @data_all %>);
      var arr_school = arr.concat(<%= @data_school %>);
      var arr_dept = arr.concat(<%= @data_dept %>);

      function drawChartAll() {
        var data = google.visualization.arrayToDataTable(arr_all);

        var options = {
          curveType: 'function',
          crosshair: { trigger: 'both',
                       orientation: 'vertical',
                       color : 'red'},
          legend: { position: 'none' },
          pointSize: 5,
          vAxis: { title: '인원',
                    textStyle : { italic: false},
                    //format: '0',
                    baselineColor: 'none'},
          hAxis: { title : '학점',
                    ticks : <%= @h_axis_all%>,
                    textStyle: { italic: false},
                 },
        };

        var chart = new google.visualization.LineChart(document.getElementById('curve_chart_all'));

        chart.draw(data, options);
      }
      
      function drawChartSchool() {
        var data = google.visualization.arrayToDataTable(arr_school);

        var options = {
          curveType: 'function',
          crosshair: { trigger: 'both',
                       orientation: 'vertical',
                       color : 'red'},
          legend: { position: 'none' },
          pointSize: 5,
          vAxis: { title: '인원',
                    textStyle : { italic: false},
                    gridlines: { count : 10},
                    format: 'long',
                    baselineColor: 'none'},
          hAxis: { title : '학점',
                   ticks : [0, 0.5, 1, 1.5, 2, 2.5, 3, 3.5, 4, 4.5],
                    textStyle: { italic: false},
                 },
        };

        var chart = new google.visualization.LineChart(document.getElementById('curve_chart_school'));

        chart.draw(data, options);
      }

      function drawChartDept() {
        var data = google.visualization.arrayToDataTable(arr_dept);

        var options = {
          curveType: 'function',
          crosshair: { trigger: 'both',
                       orientation: 'vertical',
                       color : 'red'},
          legend: { position: 'none' },
          pointSize: 5,
          vAxis: { title: '인원',
                    gridlines: { count : 10},
                    //count: 4,
                    textStyle : { italic: false},
                    format: 'long',
                    baselineColor: 'none'},
          hAxis: { title : '학점',
                   ticks : [0, 0.5, 1, 1.5, 2, 2.5, 3, 3.5, 4, 4.5],
                   //ticks : <%= @h_axis_dept%>,
                    textStyle: { italic: false},
                 },
        };

        var chart = new google.visualization.LineChart(document.getElementById('curve_chart_dept'));

        chart.draw(data, options);
      }
<% end %>