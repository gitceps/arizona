<div class="bg"></div>
<div class="row">
  <div align="center">
    <div class="container">
      <h2><span style = "font-size:20pt">로그인</span></h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <span><%= f.label :"이메일" %></span><br>
        <%= f.email_field :email, autofocus: true %>               
      </div>
      <div class="field">
        <span><%= f.label :"비밀번호" %></span><br>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <span><%= f.label :"자동로그인 켜기"  %></span>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "로그인" %>
      </div>
    <% end -%>

    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>



