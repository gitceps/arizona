<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.0.0/jquery.min.js" integrity="sha384-THPy051/pYDQGanwU6poAc/hOdQxjnOEXzbT+OuUAFqNqFjL+4IGLBgCJC3ZOShY" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.2.0/js/tether.min.js" integrity="sha384-Plbmg8JY28KFelvJVai01l8WyZzrYWG825m+cZ0eDDS1f7d/js6ikvy1+X+guPIB" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.4/js/bootstrap.min.js" integrity="VjEeINv9OSwtWFLAtmc4JCtEJXXBub00gtSnszmspDLCtC0I4z4nqz7rEFbIZLLU" crossorigin="anonymous"></script>
<div class = "container">
    <table class = "table" style= "margin-top:30px;">
        <thead class ="thead-inverse">
            <th>글번호</th>
            <th>제목</th>
            <th>글쓴이</th>
            <th>조회수</th>
            <th>추천수</th>
            <th>작성시간</th>
        </thead>
        <% @pages.each do |p| %>
        <tr>
            <td><%= p.id %></td>
            <td><a href ="/board/view_post/<%= p.id %>"><%= p.title %> [<%=p.replies.count%>]</a></td>
            <td>익명</td>
            <td><%= p.view %></td>
            <td><%= p.like %></td>
            <td><%= p.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
        <% end %>
    </table>
    <div align="center" style ="color:black;">
        <%= will_paginate @pages, :page_links => true, :next_label => "다음 >", :previous_label => "< 이전" %>
    </div>
    <a href ="/board/new_post">
        <button class="btn btn-default">글쓰기</button>
    </a>
</div>
<script>
    $(document).ready(function(){
     $('#cssmenu ul > li').removeClass("active");
     $("#menu_board").addClass("active"); 
});
</script>