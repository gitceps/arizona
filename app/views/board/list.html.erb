 <header class="header">
       <div class="container">
        <div class="row">
            <div class="six columns">
            </div>
            <div class="six columns">
                <a href="/mygrade"> 내 학점 비교하기 </a><br>
                <a href="/board"> 자유게시판 </a>

                <form id="semesterFormMajor" action="/univ_list" method="get">
                    <a onclick="document.getElementById('semesterFormMajor').submit();">전공</a>
                    <input type="hidden" name="utf_8" value="✓" />
                    <input type="hidden" name="search" value="<%= @university_name %>" />
                    <input type="hidden" name="semester" value="<%= @semester %>" />
                    <input type="hidden" name="is_major" value="true" />
                </form>
                <ul>
                    <li>
                       <form id="semesterForm2" action="/univ_list" method="get">
                            <a href="#" onclick="document.getElementById('semesterForm2').submit();">2학기</a>
                            <input type="hidden" name="utf_8" value="✓" />
                            <input type="hidden" name="search" value="<%= @university_name %>" />
                            <input type="hidden" name="is_major" value="<%= @is_major %>" />
                            <input type="hidden" name="semester" value="fall" />
                        </form>
                    </li>
                    <li>
                        <form id="semesterForm1" action="/univ_list" method="get">
                            <a href="#" onclick="document.getElementById('semesterForm1').submit();">1학기</a>
                            <input type="hidden" name="utf_8" value="✓" />
                            <input type="hidden" name="search" value="<%= @university_name %>" />
                            <input type="hidden" name="is_major" value="<%= @is_major %>" />
                            <input type="hidden" name="semester" value="spring" />
                        </form>
                      </li>
                   </ul>
            </div>
        </div>
       </div>
    </header>
<div class = "container">
    <table class = "table">
        <thead class ="thead-inverse">
            <th>글번호</th>
            <th>제목</th>
            <th>글쓴이</th>
            <th>조회수</th>
            <th>추천수</th>
            <th>작성시간</th>
        </thead>
        <% @posts.each do |p| %>
        <tr>
            <td><%= p.id %></td>
            <td><a href ="/board/view_post/<%= p.id %>"><%= p.title %></a></td>
            <td>익명</td>
            <td><%= p.view %></td>
            <td><%= p.like %></td>
            <td><%= p.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        </tr>
        <% end %>
    </table>
    <a href ="/board/new_post">
        <button class="btn btn-default">글쓰기</button>
    </a>
</div>
